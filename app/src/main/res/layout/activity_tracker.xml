<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp"
    tools:context="ca.uqac.mobile.feet_tracker.android.activities.tracker.TrackerActivity">

    <Button
        android:id="@+id/btnTrainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="feet TRaineR"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRouter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="feet RouTeR"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnDevTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dev tools"
        android:textAllCaps="false" />
</LinearLayout>
